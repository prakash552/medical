<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Online Medical Store</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #0073e6;
            --secondary-color: #00a3a3;
            --text-color: #333;
            --secondary-text-color: #666;
            --bg-color: #e6f0fa;
            --card-bg: #ffffff;
            --error-color: #d32f2f;
            --success-color: #2e7d32;
            font-size: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', Arial, sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(to bottom, var(--bg-color), #ffffff);
            padding: 1.25rem;
        }

        .container {
            display: flex;
            max-width: 62.5rem;
            width: 100%;
            border-radius: 0.9375rem;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            background: var(--card-bg);
        }

        .left-section {
            width: 50%;
            background: var(--primary-color);
            padding: 2.5rem;
            color: #e6f4ea;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .left-section h1 {
            font-size: 2.25rem;
            font-weight: 600;
            margin-bottom: 0.9375rem;
            color: #fff;
        }

        .left-section h1 span {
            margin-left: 0.625rem;
            font-size: 1.875rem;
        }

        .left-section p {
            font-size: 1rem;
            color: #e0f7fa;
            line-height: 1.5;
        }

        .right-section {
            width: 50%;
            padding: 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: var(--card-bg);
            color: var(--text-color);
        }

        .right-section h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.625rem;
            color: var(--primary-color);
        }

        .right-section p.subtitle {
            color: var(--secondary-text-color);
            margin-bottom: 1.25rem;
            font-size: 0.875rem;
        }

        .error-message,
        .success-message {
            margin-bottom: 0.9375rem;
            padding: 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            display: none;
        }

        .error-message {
            background: #fff3f0;
            color: var(--error-color);
        }

        .success-message {
            background: #d4edda;
            color: var(--success-color);
        }

        .form-group {
            margin-bottom: 0.9375rem;
        }

        .form-group label {
            display: block;
            font-size: 0.875rem;
            color: var(--text-color);
            margin-bottom: 0.3125rem;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            background: #f7fafc;
            font-size: 0.875rem;
            outline: none;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-group input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(0, 115, 230, 0.1);
        }

        button {
            width: 100%;
            padding: 0.75rem;
            background: var(--primary-color);
            color: #fff;
            border: none;
            border-radius: 2.8125rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s;
        }

        button:hover:not(:disabled) {
            background: #005bb5;
        }

        button:disabled {
            background: #b0bec5;
            cursor: not-allowed;
        }

        .login-link {
            text-align: center;
            margin-top: 1.25rem;
            color: var(--secondary-text-color);
            font-size: 0.875rem;
        }

        .login-link a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .spinner {
            border: 2px solid #f7fafc;
            border-top: 2px solid #fff;
            border-radius: 50%;
            width: 1rem;
            height: 1rem;
            animation: spin 1s linear infinite;
            display: inline-block;
            margin-left: 0.5rem;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                max-width: 100%;
            }

            .left-section,
            .right-section {
                width: 100%;
                padding: 1.875rem;
            }

            .left-section {
                min-height: 12.5rem;
            }

            .left-section h1 {
                font-size: 1.75rem;
            }

            .left-section h1 span {
                font-size: 1.5rem;
            }

            .left-section p {
                font-size: 0.875rem;
            }

            .right-section h2 {
                font-size: 1.25rem;
            }

            .right-section p.subtitle {
                font-size: 0.75rem;
            }

            .form-group label {
                font-size: 0.75rem;
            }

            .form-group input {
                padding: 0.625rem;
                font-size: 0.75rem;
            }

            button {
                padding: 0.625rem;
                font-size: 0.875rem;
            }

            .login-link {
                font-size: 0.75rem;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 0.625rem;
            }

            .left-section,
            .right-section {
                padding: 0.9375rem;
            }

            .left-section {
                min-height: 9.375rem;
            }

            .left-section h1 {
                font-size: 1.5rem;
            }

            .left-section h1 span {
                font-size: 1.25rem;
            }

            .left-section p {
                font-size: 0.75rem;
            }

            .right-section h2 {
                font-size: 1.125rem;
            }

            .right-section p.subtitle {
                font-size: 0.6875rem;
            }

            .error-message,
            .success-message {
                font-size: 0.75rem;
            }

            .form-group {
                margin-bottom: 0.625rem;
            }

            .form-group label {
                font-size: 0.75rem;
            }

            .form-group input {
                padding: 0.5rem;
                font-size: 0.75rem;
            }

            button {
                padding: 0.5rem;
                font-size: 0.75rem;
            }

            .login-link {
                font-size: 0.75rem;
            }
        }

        @media (min-width: 1200px) {
            .container {
                max-width: 75rem;
            }

            .left-section h1 {
                font-size: 2.5rem;
            }

            .left-section h1 span {
                font-size: 2.125rem;
            }

            .left-section p {
                font-size: 1.125rem;
            }

            .right-section h2 {
                font-size: 1.625rem;
            }

            .right-section p.subtitle {
                font-size: 1rem;
            }

            .form-group label {
                font-size: 0.9375rem;
            }

            .form-group input {
                padding: 0.875rem;
                font-size: 0.9375rem;
            }

            button {
                padding: 0.875rem;
                font-size: 1.125rem;
            }

            .login-link {
                font-size: 0.9375rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-section">
            <h1>Online Medical Store<span>ðŸ’Š</span></h1>
            <p>Reset your password to continue shopping for trusted medical supplies and medications.</p>
        </div>
        <div class="right-section">
            <h2>Forgot Password</h2>
            <p class="subtitle">Enter your email to receive an OTP, then set a new password.</p>
            <p class="success-message" id="successMessage" aria-live="polite"></p>
            <p class="error-message" id="errorMessage" aria-live="polite"></p>
            <form id="resetForm" onsubmit="handleFormSubmit(event)">
                <div id="formFields"></div>
                <button type="submit" id="submitButton">Send OTP</button>
            </form>
            <p class="login-link">
                Remember your password? <a href="/login">Login</a>
            </p>
        </div>
    </div>

    <script>
        let currentStep = 'email';
        let redirectTimeout = null;

        function encodeHTML(str) {
            if (typeof str !== 'string') return '';
            return str.replace(/[&<>"']/g, match => ({
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#39;'
            })[match]);
        }

        function showMessage(type, message) {
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            successMessage.style.display = 'none';
            errorMessage.style.display = 'none';

            const target = type === 'success' ? successMessage : errorMessage;
            target.textContent = message;
            target.style.display = 'block';
        }

        function renderFormFields() {
            const formFields = document.getElementById('formFields');
            const submitButton = document.getElementById('submitButton');
            if (currentStep === 'email') {
                formFields.innerHTML = `
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" placeholder="Enter your email" required
                               aria-label="Email address"
                               aria-describedby="errorMessage successMessage">
                    </div>
                `;
                submitButton.textContent = 'Send OTP';
            } else {
                formFields.innerHTML = `
                    <div class="form-group">
                        <label for="otp">OTP</label>
                        <input type="text" id="otp" placeholder="Enter 6-digit OTP" required maxlength="6"
                               aria-label="6-digit OTP"
                               aria-describedby="errorMessage successMessage">
                    </div>
                    <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" id="newPassword" placeholder="Enter new password" required
                               aria-label="New password"
                               aria-describedby="errorMessage successMessage">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" placeholder="Confirm new password" required
                               aria-label="Confirm new password"
                               aria-describedby="errorMessage successMessage">
                    </div>
                `;
                submitButton.textContent = 'Reset Password';
                setTimeout(() => document.getElementById('otp')?.focus(), 0);
            }
        }

        function validateEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function validateOtp(otp) {
            return /^\d{6}$/.test(otp);
        }

        function validatePassword(password) {
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
            return passwordRegex.test(password);
        }

        async function handleFormSubmit(event) {
            event.preventDefault();
            const submitButton = document.getElementById('submitButton');
            submitButton.disabled = true;
            submitButton.innerHTML = 'Processing <span class="spinner"></span>';

            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';

            try {
                if (currentStep === 'email') {
                    const email = encodeHTML(document.getElementById('email').value.trim());
                    if (!email) {
                        throw new Error('Email is required');
                    }
                    if (!validateEmail(email)) {
                        throw new Error('Invalid email format');
                    }

                    const response = await fetch('/api/users/request-password-reset', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        credentials: 'include',
                        body: JSON.stringify({ email })
                    });

                    if (!response.ok) {
                        const data = await response.json();
                        throw new Error(data.message || 'Failed to send OTP');
                    }

                    showMessage('success', 'OTP sent to your email. Please check your inbox.');
                    currentStep = 'otp';
                    renderFormFields();
                } else {
                    const otp = encodeHTML(document.getElementById('otp').value.trim());
                    const newPassword = document.getElementById('newPassword').value;
                    const confirmPassword = document.getElementById('confirmPassword').value;

                    if (!otp || !newPassword || !confirmPassword) {
                        throw new Error('All fields are required');
                    }
                    if (!validateOtp(otp)) {
                        throw new Error('OTP must be a 6-digit number');
                    }
                    if (!validatePassword(newPassword)) {
                        throw new Error('Password must be at least 8 characters, including uppercase, lowercase, number, and special character');
                    }
                    if (newPassword !== confirmPassword) {
                        throw new Error('Passwords do not match');
                    }

                    const response = await fetch('/api/users/reset-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        credentials: 'include',
                        body: JSON.stringify({ otp, newPassword })
                    });

                    if (!response.ok) {
                        const data = await response.json();
                        throw new Error(data.message || 'Failed to reset password');
                    }

                    showMessage('success', 'Password reset successful! Redirecting to login in 4 seconds...');
                    submitButton.style.display = 'none';
                    redirectTimeout = setTimeout(() => {
                        window.location.href = '/login';
                    }, 4000);
                }
            } catch (error) {
                showMessage('error', error.message || 'An unexpected error occurred');
            } finally {
                submitButton.disabled = false;
                submitButton.innerHTML = currentStep === 'email' ? 'Send OTP' : 'Reset Password';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            renderFormFields();

            const successMessage = document.getElementById('successMessage');
            successMessage.addEventListener('click', () => {
                if (redirectTimeout) {
                    clearTimeout(redirectTimeout);
                    showMessage('success', 'Redirect cancelled. Click login below to continue.');
                }
            });
        });
    </script>
</body>
</html>